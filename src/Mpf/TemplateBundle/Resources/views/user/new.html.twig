{% extends '::base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style type="text/css">
        a.button {
            -webkit-appearance: button;
            -moz-appearance: button;
            appearance: button;

            text-decoration: none;
            color: initial;
        }
    </style>
{% endblock %}
{% block central %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <section id="hecho"  >
        <div class="container">
            <div class="center wow fadeInDown">
                <h1  style="color: #000;">Editar usuario</h1>
            </div> 
            <div class="container fadeInDown">
                <div class="container">
                    <div class="row">
                        <div class=" col-md-12">
                            <div class="form-group">
                                {{ form_row(form.username)}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-md-6">
                            <div class="form-group">
                                {{ form_row(form.isActive)}}
                            </div>
                        </div>
                        <div class=" col-md-6">
                            <div class="form-group">
                                {{ form_row(form.isAdmin)}}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class=" col-md-6">
                            <div class="form-group">
                                {{ form_row(form.name)}}
                            </div>
                        </div>
                        <div class=" col-md-6">
                            <div class="form-group">
                                {{ form_row(form.fiscalia)}}
                            </div>
                        </div>

                    </div>
                    <div >
                        {{ form_rest(form) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input class="btn btn-primary" type="submit" value="Crear Usuario" />
                                <a href="{{ path('user_index') }}" class="btn btn-primary">Volver</a>
                            </div>
                        </div>	
                    </div>

                </div>	
            </div>

        </div><!--/.container-->
    </section><!--/#main-slider-->
    {{ form_end(form) }}
{% endblock %}
